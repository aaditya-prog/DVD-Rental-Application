@{
	ViewBag.Title = "Login";
	Layout = "~/Views/Shared/_Layout.cshtml";
	var returnUrl = ViewData["ReturnUrl"] as string;
	var error = TempData["Error"] as string;
}

<div class="text-center">
	<h1 class="display-1">Login to Ropey DVD's</h1>
</div>

<div class="row d-flex justify-content-center align-items-center h-100">
	<div class="col-md-9 col-lg-6 col-xl-5">
		<img src="../images/logo.png"
			 class="img-fluid" alt="ROPEY DVD LOGO">
	</div>
	<div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">

		<div class="card border-dark mb-3" style="background-color:#FFFCEF">

			@if (!string.IsNullOrEmpty(error))
			{
				<div class="alert alert-danger" role="alert">
					@error
				</div>
			}

			<div class="card-body">
				<form asp-controller="Home" asp-action="Login" method="post">
					<!-- User Name input -->
					<div class="form-outline mb-4">
						<label class="form-label" for="userName">Username</label>
						<input type="text" id="username" name="username" class="form-control form-control-lg"
							   placeholder="Enter a valid username" style="background-color:#FFFCEF" required autofocus />

					</div>

					<!-- Password input -->
					<div class="form-outline mb-3">
						<label class="form-label" for="password">Password</label>
						<input type="password" id="password" name="password" class="form-control form-control-lg"
							   placeholder="Enter password" style="background-color:#FFFCEF" required autofocus />

					</div>

					<div class="d-flex justify-content-between align-items-center">
						<!-- Checkbox -->
						<div class="form-check mb-0">
							<input class="form-check-input me-2" type="checkbox" value="" id="remember-password" />
							<label class="form-check-label" for="remember-password">
								Remember me
							</label>
						</div>
					</div>

					<div class="text-center text-lg-start mt-4 pt-2">
						<button type="submit" class="btn btn-danger btn-lg"
								style="padding-left: 2.5rem; padding-right: 2.5rem;">
							Login
						</button>
					</div>

				</form>
			</div>
		</div>
	</div>
</div>
